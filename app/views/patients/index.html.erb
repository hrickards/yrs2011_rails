<h1>Listing patients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address line one</th>
    <th>Town</th>
    <th>County</th>
    <th>Postcode</th>
    <th>GP ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.name %></td>
    <td><%= patient.address_line_one %></td>
    <td><%= patient.town %></td>
    <td><%= patient.county %></td>
    <td><%= patient.postcode %></td>
    <td><%= patient.gp_id %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

